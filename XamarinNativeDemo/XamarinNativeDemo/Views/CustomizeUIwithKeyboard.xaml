                    x:Name="stkFirstName"
                    Grid.Row="0"
                    Margin="0"
                    Padding="0"
                    HorizontalOptions="FillAndExpand"
                    Spacing="5"
                    VerticalOptions="FillAndExpand">
                    <Label
                        FontAttributes="Bold"
                        FontFamily="Sitka"
                        FontSize="16"
                        Text="First Name"
                        TextColor="Black" />
                    <Frame
                        Margin="0"
                        Padding="10,0"
                        BorderColor="Gray"
                        CornerRadius="5"
                        HeightRequest="45"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                        <Entry
                            x:Name="txtFirstName"
                            BackgroundColor="Transparent"
                            Focused="txtFirstName_Focused"
                            FontFamily="Sitka"
                            FontSize="16"
                            Placeholder="Enter first name"
                            PlaceholderColor="LightGray"
                            TextColor="Black"
                            VerticalOptions="CenterAndExpand" />
                    </Frame>
                </StackLayout>

